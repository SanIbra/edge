{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ilpml",
	"patterns": [
		{
			"include": "#code"
		}
	],
	"repository": {
		"code":
		{
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#commentLine"
				},
				{
					"include": "#commentBlock"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#constantsChar"
				},
				{
					"include": "#idents"
				},
				{
					"include": "#constantsNum"
				},
				{
					"include": "#operators"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.ilpml",
					"match": "\\b(if|then|else|let|and|in)\\b"
				},
				{
					"name": "keyword.operator.ilpml",
					"match": "="
				}
			]
		},
		"commentLine": {
			"patterns": [
				{
					"name": "comment.line.ilpml",
					"match": "//.*$"
				}
			]
		},
		"commentBlock": {
			"patterns": [
				{
					"name": "comment.block.ilpml",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.ilpml",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ilpml",
					"match": "\\\\."
				}
			]
		},
		"constantsChar": {
			"patterns": [
				{
					"name": "constant.character.ilpml",
					"match": "\\b(true|false)\\b"
				}
			]
		},
		"constantsNum": {
			"patterns": [
				{
					"name": "constant.numeric.ilpml",
					"match": "([0-9]+(\\.[0-9]*)?|\\.[0-9]+)"
				}
			]
		},
		"idents": {
			"patterns": [
				{
					"name": "variable.name.ilpml",
					"match": "[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.ilpml",
					"match": "\\+|=|-|\\*|!|<|>|\\||\\^|&|%"
				}
			]
		}
	},
	"scopeName": "source.ilpml"
}